<div class="container">
  <h1>My Tasks</h1>

  <% @tasks.each do |task| %>
    <div class="checkb">
      <%# raise %>

      <% checked = task.completed ? "checked" : "" %>
      <input type="checkbox" <%="#{checked}"%>>
      <%= link_to "#{task.title}", task_path(task) %><br><br>
      <%= link_to "Supprimer", task_path(task), data: {turbo_method: :delete} %>
    </div>
  <% end %>

  <%= link_to "Ajouter une tache", new_path, class: "btn btn-primary"%>
</div>
